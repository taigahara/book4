<div class="col-xs-9" >
    <% if @user.errors.any? %>
        <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this book from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>

 <h2>User info</h2>
  <div class="form-body">
      <%= form_for(@user) do |f| %>
        <div>
          <label class="control-label">Name</label>
          <%= f.text_field :name,placeholder:"名前"%>
        </div>
        <div>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
        </div>
        <div>
          <label class="control-label">Introduction</label>
          <%= f.text_field :introduction,placeholder:"自己紹介"%>
        </div>
        <%= f.submit "Update User" %>
      <% end %>
  </div>
</div>