<h2>User info</h2>

  <div class="col-xs-3">
    <div>
      <p><td><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg' ,fallback: "no_image.jpg", size:'100x100' %></td></p>
      <table class="table table-striped">
        <p><span class="space">name</span><%= user.name %></p>
        <p><span class="space">introduction</span><%= user.introduction %></p>
      <% if user == current_user %>
        <%= link_to edit_user_path(user), class: "btn form-control" do %>
          <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
        <% end %>
      <% end %>
      </table>
    </div>

    <h2>New book</h2>
    <% if book.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>
          <ul>
            <% book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

      <%= form_for(Book.new) do |f| %>
      <div class="field">
        <p><%= f.label :title %></p>
        <p><%= f.text_field :title %></p>
      </div>
      <div class="field">
        <p><%= f.label :Opinion %></p>
        <p><%= f.text_field :body %></p>
      </div>
      <div class="actions">
        <%= f.submit 'Create Book', class: 'btn btn-primary'%>
      </div>
      <% end %>
  </div>